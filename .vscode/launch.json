{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Rulează Server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Server/main_server",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-L${workspaceFolder}/build/lib/",
                "-lprotobuf",
                "-lRPC",
                "-Wl,-rpath,${workspaceFolder}/build/lib/"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/Server",
           "environment": [
                    {
                        "name": "LD_LIBRARY_PATH",
                        "value": "${workspaceFolder}/build/lib/:${env:LD_LIBRARY_PATH}"
                    }
                ],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Încarcă simbolurile pentru a asista depanarea.",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Compilare Server"
        },
        {
            "name": "Rulează Client",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Client/main_client",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-L${workspaceFolder}/build/lib/",
                "-lprotobuf",
                "-lRPC",
                "-Wl,-rpath,${workspaceFolder}/build/lib/"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/Client",
            "environment": [
                    {
                        "name": "LD_LIBRARY_PATH",
                        "value": "${workspaceFolder}/build/lib/:${env:LD_LIBRARY_PATH}"
                    }
                ],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Încarcă simbolurile pentru a asista depanarea.",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Compilare Client"
        }
    ],
    "compounds": [
        {
            "name": "Rulează Server și apoi Client",
            "configurations": [
                "Rulează Server",
                "Rulează Client"
            ]
        }
    ]
}
